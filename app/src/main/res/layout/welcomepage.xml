<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcome_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome User"
        android:textSize="30sp"
        android:textColor="?colorPrimary"
        android:padding="10sp"
        android:paddingLeft="10sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommended for you ..."
        android:textSize="20sp"
        android:textColor="?colorSecondary"
        android:padding="10sp"
        android:paddingLeft="10sp"/>

    <ListView
        android:id="@+id/voucher_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:divider="@android:color/transparent"
        android:text="Sorry No Results" />

    <Button
        android:id="@+id/view_businesses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View all businesses"
        android:textSize="20sp"
        android:padding="10sp"
        />

    <Button
        android:id="@+id/view_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wallet"
        android:textSize="20sp"
        android:padding="10sp"
        />

    <Button
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="20sp"
        android:padding="10sp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="122dp"
        android:src="@drawable/shopping2"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="About Us"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:padding="10sp"
        android:text="We are an app dedicated to helping students shop sustainably easily. We help by providing discounts to students to incentivise shopping locally more often, and increase customers to local businesses with a low online precense."
        android:textSize="15sp"/>



</LinearLayout>