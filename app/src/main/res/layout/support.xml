<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Back"
            android:textSize="32dp"
            app:icon="?attr/actionModeCloseDrawable"/>

        <Button
            android:id="@+id/qrButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="qr code"
            android:textAllCaps="true"
            android:textSize="32dp"
            app:icon="@android:drawable/ic_dialog_dialer" />

        <Button
            android:id="@+id/loyaltyRatingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Loyalty Rating"
            android:textAllCaps="true"
            android:textSize="32dp"
            app:icon="@android:drawable/btn_star" />

        <Button
            android:id="@+id/contactButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Contact Us"
            android:textAllCaps="true"
            android:textSize="32dp"
            app:icon="@android:drawable/stat_sys_phone_call" />
        <TextView
            android:id="@+id/qrCodeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:text="__________________________________________________
Select the bussiness you want discounts from in Student Main Menu.
This will create a unique QR Code for your use in the selected local business.
discount will be applied after QR Code is scanned. ---------------------------------------------------------------------------------"/>
        <TextView
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:textSize="18dp"
            android:textAlignment="center"
            android:ems="10"
            android:text="Email: moneytress@gmail.com"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:textSize="18dp"
            android:ems="10"
            android:textAlignment="center"
            android:digits="+44 1234 567 890"
            android:text="No: +44 1234 567 890"
            android:visibility="visible"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>