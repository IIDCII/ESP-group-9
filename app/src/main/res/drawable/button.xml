    </shape>
    </item>


    <item
        android:state_focused="false"
        android:state_pressed="true">
        <shape
            android:innerRadiusRatio="1"
            android:shape="rectangle">
            <solid android:color="#F7F7F7"/>
        </shape>
    </item>

</selector>