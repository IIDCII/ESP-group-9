<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BusinessMain">

    <TextView
        android:id="@+id/business_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="30sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/darker_gray"
        android:padding="20dp"/>
    <Button
        android:id="@+id/add_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="30sp"
        android:text="Add Business"
        />
    <Button
        android:id="@+id/edit_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="30sp"
        android:text="Edit Business"
        />
    <Button
        android:id="@+id/scan_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="30sp"
        android:text="Scan Discount"
        />
    <Button
        android:id="@+id/log_out"
        android:layout_width="match_parent"
        android:paddingVertical="30sp"
        android:layout_height="wrap_content"
        android:text="log out"
        android:textColor="@color/black"
        android:backgroundTint="?colorSecondary"
        />

</LinearLayout>